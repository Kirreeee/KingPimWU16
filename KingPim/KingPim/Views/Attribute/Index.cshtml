@model KingPim.Models.AttributeViewModels.AttributeViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Attribute Name</th>
        <th>Attribute Group Name</th>
    </tr>

@foreach (var item in Model.Attribute) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AttributeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AttributeGroup.AttributeGroupName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
